<% if obj.favorited_by?(current_user) %>
  <%= link_to post_image_favorites_path(obj), method: :delete, remote: true do %>
    <i class="fas fa-heart fa-lg" style="color:red;"> <%= obj.favorites.count %></i>
  <% end %>
<% else %>
  <%= link_to post_image_favorites_path(obj), method: :post, remote: true do %>
    <i class="fas fa-heart fa-lg" style="color:silver;"> <%= obj.favorites.count %></i>
  <% end %>
<% end %>