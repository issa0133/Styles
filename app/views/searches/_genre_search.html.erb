<div class="bg-light text-center">
  <h3 class="bg-dark text-white font-weight-bold py-3">ジャンル検索一覧</h3>
    <% genres.each do |genre| %>
      <%= form_with url: search_path, method: :get, local: true do |f| %>
        <%= f.hidden_field :model, value: "Genre" %>
        <%= f.hidden_field :word, value: genre.id  %>
        <%= f.submit genre.name,class: "btn btn-block btn-outline-dark btn-lg my-2" %>
      <% end %>
    <% end %>
</div>