<h1>マイページ</h1>
<div>
  <%= attachment_image_tag @user, :image, size: "200x200", fallback: "no_image.jpeg" %>
  <p><%= @user.name %></p>
  <P><%= link_to @user.followers.count, followers_user_path(@user) %>フォロー</P>
  <span><%= link_to @user.followeds.count, followeds_user_path(@user) %>フォロワー</span>
  <p><%= @user.introduction %></p>
  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% else %>
    <% if @user.is_followed_by?(current_user) %>
      <%= link_to user_relationships_path(@user), method: :delete do %>
        <button class="btn btn-secondary">フォロー中</button>
      <% end %>
    <% else %>
      <%= link_to user_relationships_path(@user), method: :post do %>
        <button class="btn btn-light">フォローする</button>
      <% end %>
    <% end %>
  <% end %>
</div>

<h2>新着投稿</h2>
<% @post_images.each do |post_image| %>
<div>
  <%= link_to post_image_path(post_image.id) do %>
    <%= attachment_image_tag post_image, :image, size: "120x100" %>
  <% end %>
  <%= post_image.title %>
  <%= post_image.genre.name %>
  <%= post_image.user.name %>
</div>
<% end %>