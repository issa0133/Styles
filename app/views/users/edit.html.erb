<div>
  <%= form_with model:@user, local: true do |f| %>
    <%= attachment_image_tag @user, :image, size: "360x240", fallback: "no_image.jpeg" %>
    <p><%= f.attachment_field :image %></p>
    <p><%= f.text_field :name, placeholder: "ユーザー名" %></p>
    <p><%= f.text_area :introduction, placeholder: "投稿の説明" %></p>
    <%= f.submit "変更を保存" %>
  <% end %>
</div>
