<div class="container-fuild">
  <div class="row justify-content-center">
    <div class="col-sm-6 text-center px-0">
      <%= link_to post_images_path, method: :get do %>
        <h2 class="text-white border border-white bg-dark">新着投稿</h2>
      <% end %>
    </div>
    <div class="col-sm-6 text-center px-0">
      <%= link_to follower_post_post_images_path, method: :get do %>
        <h2 class="text-white border border-white bg-dark">タイムライン</h2>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center">
    <% post_images.each do |post_image| %>
    <div class="card col-md-7 col-xl-3 my-3 mx-4">
      <%= link_to post_image_path(post_image.id) do %>
        <%= attachment_image_tag post_image, :image, size: "240x360", class: "card-img-top"; %>
      <% end %>
      <div class="card-body">
        <%= link_to user_path(post_image.user.id) do %>
          <%= attachment_image_tag post_image.user, :image, size: "50x50", fallback: "no_image.jpeg" %>
        <% end %>
        <span><%= post_image.user.name %></span>
        <span class="ml-auto">
        <% if post_image.user != current_user %>
          <%= render "users/follow_system", obj: post_image.user %>
        <% end %>
        </span>
      </div>
    </div>
    <% end %>
  </div>
  <div class="row justify-content-center">
    <%= paginate post_images %>
  </div>
</div>


