<div class="container-fuild">
  <div class="row justify-content-center mx-0">
    <div class="col-sm-6 px-0 py-2 text-center align-self-center border border-white bg-dark">
      <%= link_to "新着投稿", post_images_path, class: "text-white h2" %>
    </div>
    <div class="col-sm-6 px-0 py-2 text-center align-self-center border border-white bg-dark">
      <%= link_to "タイムライン", follower_post_post_images_path, class: "text-white h2" %>
    </div>
  </div>
  <div class="row justify-content-center px-0 mx-0">
    <% post_images.each do |post_image| %>
    <div class="card col-md-5 col-xl-3 pt-3 my-3 mx-4">
      <div class="post-index-image">
        <%= link_to post_image_path(post_image.id) do %>
          <%= attachment_image_tag post_image, :image, size: "300x420", class: "card-img-top"; %>
        <% end %>
      </div>
      <div class="card-body">
        <div class="profile-icon">
          <%= link_to user_path(post_image.user.id) do %>
            <%= attachment_image_tag post_image.user, :image, size: "60x60", fallback: "no_image.jpg" %>
          <% end %>
        </div>
        <div class="row">
          <span class="col-6 px-0 text-left"><%= post_image.user.name %></span>
          <span class="col-6 px-0 text-right">
          <% if post_image.user != current_user %>
            <%= render "users/follow_system", obj: post_image.user %>
          <% end %>
          </span>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="row justify-content-center px-0 mx-0">
    <%= paginate post_images %>
  </div>
</div>


