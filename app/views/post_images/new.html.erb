<div class="container">
  <div class="row justify-content-center mt-5 border border-dark bg-light h5">
　　<div class="col-md-8 my-5">
      <%= form_with model: @post_image, local: true do |f| %>
        <p><%= f.attachment_field :image %></p>
        <p><%= f.text_field :title, placeholder: "タイトル名",class: "form-control" %></p>
        <p><%= f.collection_select :genre_id, @genres, :id, :name, {prompt: "ジャンル"}, class: "form-control col-3" %></p>
        <p><%= f.text_area :introduction, placeholder: "投稿の説明",class: "form-control", rows: 15 %></p>
        <div class="text-center">
          <%= f.submit "アップロード",class: "btn btn-outline-dark" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

